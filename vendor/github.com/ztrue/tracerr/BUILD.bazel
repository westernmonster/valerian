load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "error.go",
        "print.go",
    ],
    importmap = "valerian/vendor/github.com/ztrue/tracerr",
    importpath = "github.com/ztrue/tracerr",
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/logrusorgru/aurora:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
