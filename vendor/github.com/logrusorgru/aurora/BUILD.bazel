load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "aurora.go",
        "color.go",
        "sprintf.go",
        "value.go",
        "wrap.go",
    ],
    importmap = "valerian/vendor/github.com/logrusorgru/aurora",
    importpath = "github.com/logrusorgru/aurora",
    visibility = ["//visibility:public"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
