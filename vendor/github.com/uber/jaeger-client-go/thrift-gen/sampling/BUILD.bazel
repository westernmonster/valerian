load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "constants.go",
        "samplingmanager.go",
        "ttypes.go",
    ],
    importmap = "valerian/vendor/github.com/uber/jaeger-client-go/thrift-gen/sampling",
